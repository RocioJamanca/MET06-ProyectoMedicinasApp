<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_day_medDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linLay_meDay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btn_takeMed_medDay"
        app:layout_constraintTop_toBottomOf="@+id/txt_day_medDay">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyView_medDay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_takeMed_medDay"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Take Medicine"
        app:layout_constraintBottom_toTopOf="@+id/btn_pass_medDay"
        app:layout_constraintEnd_toStartOf="@+id/btn_noMed_medDay"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:id="@+id/btn_noMed_medDay"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="No take Medicine"
        app:layout_constraintBottom_toTopOf="@+id/btn_pass_medDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_takeMed_medDay" />

    <Button
        android:id="@+id/btn_pass_medDay"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:text="Pass day"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_message_medDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="#016977"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_takeMed_medDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_day_medDay" />
</androidx.constraintlayout.widget.ConstraintLayout>