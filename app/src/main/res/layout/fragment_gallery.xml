<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_userProfile_profile"
        android:layout_width="411dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/addusericon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/medcareTitle_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="8sp"
        android:text="MedCare Profile"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_userProfile_profile" />

    <EditText
        android:id="@+id/text_name_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autofillHints="Name"
        android:clickable="false"
        android:ems="15"
        android:text="Name"
        android:editable="false"
        android:textColor="#2F3D40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medcareTitle_menu" />

    <EditText
        android:id="@+id/text_surname_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surname"
        android:editable="false"
        android:textColor="#2F3D40"
        android:layout_marginTop="10dp"
        android:autofillHints="Surname"
        android:clickable="false"
        android:ems="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name_profile"/>

    <EditText
        android:id="@+id/text_age_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:editable="false"
        android:textColor="#2F3D40"
        android:layout_marginTop="10dp"
        android:autofillHints="Ages"
        android:clickable="false"
        android:ems="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_surname_profile"/>

    <EditText
        android:id="@+id/text_email_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:editable="false"
        android:textColor="#2F3D40"
        android:layout_marginTop="10dp"
        android:autofillHints="Email"
        android:ems="15"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_age_profile"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_radioBtnGroup_profile"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_email_profile"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/btn_patient_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="I'm a patient"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:textColor="#2F3D40"
            android:fontFamily="sans-serif"/>

        <RadioButton
            android:id="@+id/btn_relative_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="I'm a relative"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:textColor="#2F3D40"
            android:fontFamily="sans-serif"/>
    </RadioGroup>

    <Button
        android:id="@+id/btn_changePass_profile"
        android:text="Change Password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_radioBtnGroup_profile"/>

    <Button
        android:id="@+id/btn_editProfile_profile"
        android:text="Edit Profile"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_changePass_profile"/>


</androidx.constraintlayout.widget.ConstraintLayout>